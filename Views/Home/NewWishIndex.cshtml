@model Wishes

<img src="~/Images/smoke.jpg" class="img-fluid" style="position:absolute;top:0px;left:0px;z-index:-1;width:100%;" />
<div class="bg-light p-4 rounded-left" style="opacity:.8;width:50%;">
    <h2>Enter your three wishes...</h2>

    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.wish1" class="col-form-label">Wish #1</label>
            <input asp-for="@Model.wish1" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.wish2" class="col-form-label">Wish #2</label>
            <input asp-for="@Model.wish2" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.wish3" class="col-form-label">Wish #3</label>
            <input asp-for="@Model.wish3" class="form-control" />
        </div>
        <button type="submit">Submit</button>
    </form>
</div>